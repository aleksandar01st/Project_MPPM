<Window x:Class="NMSTestClientUI.GetRelatedValues"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NMSTestClientUI"
        mc:Ignorable="d"
        Title="GetRelatedValues" Height="800" Width="800"
        Background="#F7F9FB">
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="Margin" Value="20,10,0,10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="7">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#34495e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#F9FAFC"/>
            <Setter Property="BorderBrush" Value="#D3D6DB"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">

        <!-- Top navigation bar -->
        <Border CornerRadius="8" Background="#2c3e50" Height="60" VerticalAlignment="Top">
            <DockPanel Background="Transparent" Height="60" VerticalAlignment="Top" LastChildFill="False">
                <Button Content="GetValues"
                    DockPanel.Dock="Left"
                    Style="{StaticResource NavButtonStyle}"
                    Click="Button_GetValues_Click"
                    Background="#2980b9"/>
                <Button Content="GetExtentValues"
                    DockPanel.Dock="Left"
                    Margin="180, 10, 10, 10"
                    Style="{StaticResource NavButtonStyle}"
                    Click="Button_GetExtentValues_Click"
                    Background="#16a085"/>
                <Button Content="GetRelatedValues"
                    DockPanel.Dock="Right"
                    Margin="10, 10, 20, 10"
                    Style="{StaticResource NavButtonStyle}"
                    Click="Button_GetRelatedValues_Click"
                    Background="#8e44ad"/>
            </DockPanel>
        </Border>

        <!-- Main layout grid -->
        <Grid Margin="0,75,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel -->
            <Border Grid.Column="0" Margin="5" Background="White" CornerRadius="10" Padding="16" BorderBrush="#E3E4E8" BorderThickness="1">
                <StackPanel VerticalAlignment="Top">

                    <Label Content="Choose GID:" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
                    <ComboBox x:Name="GIDComboBox" Height="32" Margin="0,0,0,14"
                          SelectionChanged="GIDComboBox_SelectionChanged"
                          FontSize="15"
                          Padding="5"/>

                    <Label Content="Choose Association ModelCode:" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
                    <ComboBox x:Name="AssociationComboBox" Height="32" Margin="0,0,0,14"
                          SelectionChanged="AssociationComboBox_SelectionChanged"
                          FontSize="15"
                          Padding="5"/>

                    <Label Content="Choose concrete class DMSType:" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
                    <ComboBox x:Name="DMSTypeComboBox" Height="32" Margin="0,0,0,14"
                          SelectionChanged="DMSTypeComboBox_SelectionChanged"
                          FontSize="15"
                          Padding="5"/>

                    <Button x:Name="GetRelatedValuesButton" Content="Get Related Values" Height="34" Width="180"
                        Background="#27ae60" Foreground="White" Margin="0,0,0,20"
                        FontWeight="Bold"
                        BorderBrush="#219150"
                        Click="GetRelatedValuesButton_Click" Visibility="Hidden"/>

                    <CheckBox x:Name="SelectAllCheckBox" Content="Select All Properties"
                          Margin="0,0,0,10" Click="SelectAllCheckBox_Click"
                          FontWeight="SemiBold" Visibility="Hidden"
                          FontSize="14"/>

                    <Border Background="#f4f6fa" CornerRadius="6" Padding="4" BorderBrush="#E3E4E8" BorderThickness="1">
                        <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                            <UniformGrid x:Name="CheckBoxGrid" Columns="1"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Results panel -->
            <Border Grid.Column="1" Margin="10,0,0,0" Background="White" CornerRadius="10" Padding="16" BorderBrush="#E3E4E8" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Results:" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
                    <TextBox x:Name="ResultsTextBox"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="600"
                         FontFamily="Consolas"
                         FontSize="14"
                         Margin="0,0,0,6"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
